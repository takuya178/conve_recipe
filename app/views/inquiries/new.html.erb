 <div class="inquiry">
  <div class="container">
    <h2 class="section-title">お問い合わせ内容</h2>
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
          <%= form_with model: @inquiry, url: inquiry_path, local: true do |f| %>
            <div class="form-group">
              <div class="contact-item-title shadow-none">
                <%= f.label :name, User.human_attribute_name(:name) %>
              </div>
              <div class="contact-item-input">
                <%= f.text_field :name, type: "text", placeholder: "田中太郎", class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div class="contact-item-title shadow-none">
                <%= f.label :email, User.human_attribute_name(:email) %>
              </div>
              <div class="contact-item-input">
                <%= f.text_field :email, type: "text", placeholder: "health_conve@example.com", class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div class="contact-item-title shadow-none">
                <%= f.label :message, Inquiry.human_attribute_name(:message), class: "required" %>
              </div>
                <%= f.text_area :message, class: "form-control comment-area shadow-lg rounded", type: "text", placeholder: "お問合せ内容", rows: "5" %>
                <%= render 'shared/error_messages', object: f.object, text: :message %>
            </div>
            <div class="actions text-center topbtn">
              <%= f.submit '送信', class: "btn btn-square-shadow mt-5" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
 </div>