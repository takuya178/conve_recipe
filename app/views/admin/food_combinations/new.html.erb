<h1 class="text-center my-5">メイン料理編集</h1>
<div class="row justify-content-center text-center">
  <div class="col-8">
    <div class="card text-center">
      <div class="card-body">
      <%= form_with model: @food, url: admin_food_combinations_path, method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :main_id, class: "text-info" %><br>
          <%= f.text_field :main_id  %> 
        </div>
        <div class="form-group">
          <%= f.label :sub_id, class: "text-info" %><br>
          <%= f.text_field :sub_id %>
        </div>
        <div class="form-group">
          <%= f.label :prices, class: "text-info" %><br>
          <%= f.text_field :prices %>
        </div>
        <div class="form-group">
          <%= f.label :image, class: "text-info" %>
          <%= f.file_field :image, class: "form-control" %> 
        </div>
        <div class="form-group">
          <%= f.label :stores, class: "text-info" %><br>
          <%= f.select :stores, FoodCombination.stores.keys.to_a, {} %>
        </div>

        <div class="actions text-center">
          <%= f.submit "送信", class: "btn btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>