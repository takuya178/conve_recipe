<h1 class="text-center my-5">メイン料理新規作成</h1>
<div class="row justify-content-center text-center">
  <div class="col-8">
      <%= form_with model: @main, url: admin_mains_path, method: :post, local: true do |f| %>
       <div class="food_create_form">
          <label class="food_create_label">
            <%= f.file_field :image %>
          </label>
        </div>
        <div class="food_create_form">
          <label class="food_create_label">
            <%= f.text_field :name, placeholder: '商品名' %>
          </label>
          <%= render 'shared/error_messages', object: f.object, text: :name %>
        </div>
        <div class="food_create_form">
          <label class="food_create_label">
            <%= f.text_field :calorie, placeholder: 'カロリー' %>
          </label>
          <%= render 'shared/error_messages', object: f.object, text: :calorie %>
        </div>
        <div class="food_create_form">
          <label class="food_create_label">
            <%= f.text_field :sugar, placeholder: '炭水化物' %>
          </label>
          <%= render 'shared/error_messages', object: f.object, text: :sugar %>
        </div>
        <div class="food_create_form">
          <label class="food_create_label">
            <%= f.text_field :lipid, placeholder: '脂質' %>
          </label>
          <%= render 'shared/error_messages', object: f.object, text: :lipid %>
        </div>
        <div class="food_create_form">
          <label class="food_create_label">
            <%= f.text_field :salt, placeholder: '塩分' %>
          </label>
          <%= render 'shared/error_messages', object: f.object, text: :salt %>
        </div>
        <div class="food_create_form">
          <label class="food_create_label">
            <%= f.select :stores, options_for_select(Main.stores_i18n.invert), {}, class: "food_create_select" %>
          </label>
        </div>
        <div class="food_create_form">
          <label class="food_create_label">
            <%= f.select :genre, options_for_select(Main.genres_i18n.invert), {}, class: "food_create_select" %>
          </label>
        </div>
        <div class="actions text-center">
          <%= f.submit "送信", class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
</div>