<tr>
  <td>
    <% if main.image.attached? %>
    <%= image_tag main.image.variant(resize_to_fill: [250, 250] ) %>
    <% else %>
    <%= image_pack_tag("media/images/noimage.jpg") %>
  <% end %>
  </td>
  <td><%= link_to main.name, admin_main_path(main), method: :get %></td>
  <td><%= main.calorie %></td>
  <td><%= main.sugar %></td>
  <td><%= main.lipid %></td>
  <td><%= main.salt %></td>
  <td><%= main.genre_i18n %></td>
  <td><%= main.stores_i18n %></td>
  <td> <%= button_to t("defaults.show"),  admin_main_path(main), method: :get, class: "btn btn-success", style: "padding: 20px; width: 100%"  %></td>
  <td> <%= button_to t("defaults.delete"), admin_main_path(main), method: :delete, class: "btn btn-danger", style: "padding: 20px; width: 100%" %></td>
</tr>