<h1 class="text-center my-5">メイン料理詳細</h1>
<div class="row justify-content-center text-center">
  <div class="col-8">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="py-3 text-info">Image</h5>
        <% if @main.image.attached? %>
          <%= image_tag @main.image, size: "300x300" %>
        <% end %>
        <h5 class="text-info">Name</h5>
          <%= @main.name %>
      </div>
    </div>
    <ul>
      <li class='list-inline-item'>
        <%= button_to "編集", edit_admin_main_path(@main), method: :get, class: "btn-success", style: "padding: 20px; width: 100%"  %>
      </li>
      <li class='list-inline-item'>
        <%= button_to t("defaults.delete"), admin_main_path(@main), method: :delete, data: { confirm: '本当に削除してもよろしいですか？'}, class: "btn-danger", style: "padding: 20px; width: 100%"  %>
      </li>
    </ul>
  </div>
</div>

