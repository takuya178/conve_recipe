<h1 class="text-center my-5">メイン料理編集</h1>
<div class="row justify-content-center text-center">
  <div class="col-8">
    <%= form_with model: @main, url:  admin_main_path(@main),  method: :patch, local: true do |f| %>
      <%= render 'admin/shared/form', f: f %>
        <div class="food_create_form">
          <label class="food_create_label">
            <%= f.select :genre, options_for_select(Main.genres_i18n.invert), {}, class: "food_create_select" %>
          </label>
        </div>
    <% end %>
  </div>
</div>