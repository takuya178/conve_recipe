<div class="food_combi_flex">
  <div class="food_combi_flex_inner">
    <div class="food_combi_menu_text">
      <% if current_page?(food_combinations_path) %>
        <div class="food_combi_title">組み合わせ</div>   
      <% else %>               
        <div class="food_combi_title_red">成分量が多い組み合わせ</div>
      <% end %>
      <div class="food_combi_menu_inner">
        <div class="food_combi_main">
          <p>メイン</p>
          <% if food.main.image.attached? %>
            <%= image_tag food.main.image %>
          <% else %>
            <%= image_pack_tag("media/images/noimage.jpg") %>
          <% end %>
          <div class="food_combi_main_name">
            <%= food.main.name %>
          </div>
        </div>
        <div class="food_combi_compo">×</div>
        <div class="food_combi_sub">
          <p>プラス一品</p>
          <% if food.sub.image.attached? %>
            <%= image_tag food.sub.image %>
          <% else %>
            <%= image_pack_tag("media/images/noimage.jpg") %>
          <% end %>
          <div class="food_combi_sub_name">
            <%= food.sub.name %>
          </div>
        </div>
      </div>
      <div class="food_combi_border_blue"></div>
        <div class="food_combi_text">
          <div class="food_combi_price">
            組み合わせ総カロリー： <%= food.main.calorie + food.sub.calorie %> cal
          </div>
          <div class="food_combi_price">
            コンビニ名： <%= food.main.stores_i18n %>
          </div>
      </div>
    </div>
  </div>
</div>