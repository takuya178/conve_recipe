<% content_for(:title, t('.title')) %>
<div id="loading" class="loading active">
      <span>L</span>
      <span>O</span>
      <span>A</span>
      <span>D</span>
      <span>I</span>
      <span>N</span>
      <span>G</span>
</div>

<% if @sugar && @component_params.size == 1 && @noodle %>
  <div class="food_combination" id='js-tab'>
    <div class="food_select container" id='js-normalselect'>
      <%= render 'button' %>
      <div class="food_combi_component_text_inner">
        <p class="food_combi_ngtext">炭水化物80g以下の組み合わせ</p>    
      </div>
      <div class="js_contain">
        <% @foods.each do |food| %>
          <% if food.main.genre == 'noodle' && food.plus_component %>
            <div class="food_combi_contain">
              <%= render 'details', food: food %>
            </div>
          <% end %>
        <% end %>
      </div>
      <%== pagy_bootstrap_nav(@pagy) %> 
    </div>
  </div>

