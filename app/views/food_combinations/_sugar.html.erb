<% if @sugar && @component_params.size == 1 && @noodle %>
  <div class="food_select_back" id='tab'>
    <%= render 'button' %>
    <%= render 'shared/food_component_btn', url: food_combinations_path %>
    <div class="food_select container" id='js-normalselect' style="display: block">
      <div class="food_combi_component_text_inner">
        <p class="food_combi_ngtext">炭水化物80g以下の組み合わせ</p>    
      </div>
      <%= paginate @foods %> 
      <% @foods.each do |food| %>
        <% if food.main.genre == 'noodle' && food.main.sugar + food.sub.sugar <= 80 %>
          <div class="food_combi_contain" id="js-contents">
            <%= render 'details', food: food %>
            <div class="food_graph">
              <% chart = [
                { name: '炭水化物(g)', data: food.get_sugar }
              ] %>
              <%= bar_chart chart, colors: ["#185ADB", "#666"], min: 0, max: 100 %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

<% elsif @sugar && @component_params.size == 1 && @rice %>
