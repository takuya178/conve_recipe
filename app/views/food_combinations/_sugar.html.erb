<% if @sugar && @component_params.size == 1 && @noodle %>
  <div class="food_select_back" id='tab'>
    <%= render 'button' %>
    <div class="food_select container" id='js-normalselect' style="display: block">
      <% @foods.each do |food| %>
        <% if food.main.genre == 'noodle' && food.main.sugar + food.sub.sugar < 75 %>
          <div class="food_combi_contain">
            <%= render 'details', food: food %>
            <div class="food_graph">
              <% chart = [
                { name: '糖質(g)', data: food.get_sugar }
              ] %>
              <%= bar_chart chart, colors: ["#185ADB", "#666"], min: 0, max: 100 %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="food_select container" id="js-ngselect" style="display: none">
      <% @foods.each do |food| %>
        <% if food.main.genre == 'noodle' && food.main.sugar + food.sub.sugar > 75 %>
          <div class="food_combi_contain">
