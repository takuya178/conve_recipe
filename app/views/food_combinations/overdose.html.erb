<% content_for(:title, t('.title')) %>
<% if @sugar && @component_params.size == 1 && @noodle %> 
  <div class="food_combination" id='tab'>
    <div class="food_select container">
      <%= render 'button' %>
      <div class="food_combi_component_text_inner">
        <p class="food_combi_ngtext">炭水化物81g以上の組み合わせ</p>    
      </div>
      <div class="js_contain">
        <% @foods.each do |food| %>
          <% if food.main.genre == 'noodle' && food.main.sugar + food.sub.sugar >= 81 %>
            <div class="food_combi_contain">
              <%= render 'details', food: food %>
            </div>
          <% end %>
        <% end %>
      </div>
      <%== pagy_bootstrap_nav(@pagy) %> 
    </div>
  </div>

