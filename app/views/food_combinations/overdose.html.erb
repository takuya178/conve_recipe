<% content_for(:title, t('.title')) %>
<% if @sugar && @noodle && @component_params.size == 1 %> 
  <div class="food_combination" id='tab'>
    <div class="food_select container">
      <%= render 'button' %>
      <div class="js_contain">
        <% @foods.each do |food| %>
          <% if food.main.genre == 'noodle' && food.overdose_sugar %>
            <div class="food_combi_contain">
              <%= render 'details', food: food %>
            </div>
          <% end %>
        <% end %>
      </div>
      <%== pagy_bootstrap_nav(@pagy) %> 
    </div>
  </div>

