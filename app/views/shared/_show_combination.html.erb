<div class="col-lg-6">
    <div class="card mx-auto mb-5 food-card modal-body">
      <% if sub.image.attached? %>
        <%= image_tag sub.image %>
      <% else %>
        <%= image_pack_tag("media/images/noimage.jpg") %>
      <% end %>
      <div class="card-body">
        <p><%= sub.name %></p>
        <p>糖質：<%= sub.sugar %>g</p>
        <p>脂質：<%= sub.lipid %>g</p>
        <p>塩分：<%= sub.salt %>g</p>
        <p>カロリー：<%= sub.calorie %>cal</p>
        <p>店舗名：<%= sub.stores %></p>
      </div>
    </div>
</div>