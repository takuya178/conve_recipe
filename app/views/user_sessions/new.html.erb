<% content_for(:title, t('.title')) %>
<div class="login-page">
  <div class="row contact">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
    <div class="section-title">
      <h1>ログイン</h1>
    </div>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="food_create_form">
          <label class="food_create_label">
            <%= f.text_field :email, placeholder: "メールアドレス" %>
          </label>
        </div>
        <div class="food_create_form">
          <label class="food_create_label text-center">
            <%= f.text_field :password, placeholder: "パスワード" %>
          </label>
        </div>
          <%= render 'shared/btn', f: f, text: 'ログイン' %>
      <% end %>
      <div class='contact-text-bottom'>
        <%= link_to '新規登録ページへ', new_user_path, class: 'contact-text-user' %>
      </div>
    </div>
  </div>
</div>  