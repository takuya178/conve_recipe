<%= search_form_for @q, url: url do |f| %>
  <div class="input-group mb-3">
    <%= f.search_field :name_or_lipid_cont, class: 'form-control', placeholder: t('defaults.search_word') %>
    <div class="input-group-append">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= search_form_for(@q, url: url) do |f| %>
  <%= f.select( :sorts, {'並び替え': 'id desc', '炭水化物少ない順': 'sugar asc', '脂質少ない順': 'lipid asc', '塩分少ない順': 'salt asc'}, { selected: params[:q][:sorts] } ) %>
  <%= f.submit '検索' %>
<% end %>