  </label>
    <span>g</span>
    <%= render 'shared/error_messages', object: f.object, text: :lipid %>
</div>
<div class="food_create_form">
  <label class="food_create_label food_create_label">
    <%= f.text_field :salt, placeholder: "塩分" %>
  </label>
    <span>g</span>
    <%= render 'shared/error_messages', object: f.object, text: :salt %>
</div>
<div class="food_create_form">
  <label class="food_create_label">
    <%= f.select :stores, Main.stores_i18n.invert.to_a, {include_blank: '店舗名を選択'}, class: "food_create_select" %>
  </label>
</div>
